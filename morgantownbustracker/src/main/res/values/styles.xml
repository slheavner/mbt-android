<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/md_light_blue_900</item>
        <item name="colorAccent">@color/md_light_blue_500</item>
        <item name="preferenceTheme">@style/MyPrefTheme</item>
        <!-- Set theme colors from http://www.google.com/design/spec/style/color.html#color-color-palette-->
        <!-- colorPrimary is used for the default action bar background -->
    </style>

    <style name="MyPrefTheme" parent="PreferenceThemeOverlay">
        <item name="android:background">@color/md_white</item>
    </style>

    <style name="AboutText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Info">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Info.Header" parent="Info">
        <item name="android:background">@color/md_grey_300</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">3dp</item>
    </style>

    <style name="Info.Text" parent="Info">
        <item name="android:padding">6dp</item>
    </style>

    <style name="CardView.Title.Text">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="CardView.Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:elevation">5dp</item>
        <item name="android:background">@color/md_light_blue_900</item>
    </style>
    <style name="CardView.Name" parent="CardView.Title.Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:elevation">0dp</item>
    </style>
    <style name="CardView.Number" parent="CardView.Title.Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="CardView.Bus.Time" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:elevation">2dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/time_background</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
    </style>
    <style name="CardView.Bus.Number" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:textColor">@color/md_grey_400</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
    </style>
    <style name="CardView.Bus.Status" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:autoLink">web</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
    </style>
    <style name="CardView.Bus.Divider" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
    </style>

</resources>
