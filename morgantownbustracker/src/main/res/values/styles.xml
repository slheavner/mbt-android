<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <!--We will be using the toolbar so no need to show ActionBar-->
        <item name="android:windowActionBar">false</item>
        <item name="android:colorAccent">@color/md_light_blue_500</item>
        <!-- Set theme colors from http://www.google.com/design/spec/style/color.html#color-color-palette-->
        <!-- colorPrimary is used for the default action bar background -->
    </style>

    <style name="CardView.Title.Text">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="CardView.Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_margin">-50dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:elevation">5dp</item>
        <item name="android:background">@color/md_light_blue_900</item>
    </style>
    <style name="CardView.Name" parent="CardView.Title.Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:elevation">0dp</item>
    </style>
    <style name="CardView.Number" parent="CardView.Title.Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="CardView.Bus.Time" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:elevation">2dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/time_background</item>
    </style>
    <style name="CardView.Bus.Number" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:textColor">@android:color/secondary_text_dark</item>
    </style>
    <style name="CardView.Bus.Status" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:autoLink">web</item>
    </style>
    <style name="CardView.Bus.Divider" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

</resources>
