<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:background="@color/md_white">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="50dp"
            android:clipToPadding="false">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    style="@style/About.Header"
                    android:id="@+id/about.header"
                    android:text="@string/about.header"/>
            <TextView
                    style="@style/About.Text"
                    android:id="@+id/about.desc"/>
            <ImageButton
                    style="@style/About.Image"
                    android:id="@+id/about.github"
                    android:src="@drawable/github_logo"/>

            <TextView
                    style="@style/About.Header"
                    android:id="@+id/about.license"
                    android:text="@string/about.license"/>
            
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <TextView
                        style="@style/LicenseHeader"
                        android:text="@string/about.colors"/>
                <TextView
                        style="@style/LicenseText"
                        android:text="@string/about.colors.license"/>

                <TextView
                        style="@style/LicenseHeader"
                        android:text="@string/about.gson"/>
                <TextView
                        style="@style/LicenseText"
                        android:text="@string/about.gson.license"/>

                <TextView
                        style="@style/LicenseHeader"
                        android:text="@string/about.okhttp"/>
                <TextView
                        style="@style/LicenseText"
                        android:text="@string/about.okhttp.license"/>

                <TextView
                        style="@style/LicenseHeader"
                        android:text="@string/about.bottomsheet"/>
                <TextView
                        style="@style/LicenseText"
                        android:text="@string/about.bottomsheet.license"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
