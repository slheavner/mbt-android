<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="20dp"
                                    card_view:cardCornerRadius="@dimen/cardview.corner"
                                    android:background="?selectableItemBackground"
                                    tools:context=".MainActivity">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:clickable="false"
            android:focusable="false"
            android:background="?android:selectableItemBackground">

        <RelativeLayout
                style="@style/CardView.Title"
                android:id="@+id/card.title"
                android:clickable="false">
            <TextView
                    style="@style/CardView.Number"
                    android:id="@+id/card.title.number"/>

            <TextView
                    style="@style/CardView.Name"
                    android:id="@+id/card.title.name"/>
        </RelativeLayout>

        <com.slheavner.wvubus.views.StatusView
                style="@style/StatusView"
                android:id="@+id/bus_one"
                android:layout_marginBottom="6dp"/>

        <com.slheavner.wvubus.views.StatusView
                style="@style/StatusView"
                android:id="@+id/bus_two"
                android:layout_marginBottom="6dp"/>

        <com.slheavner.wvubus.views.StatusView
                style="@style/StatusView"
                android:id="@+id/bus_three"/>

    </LinearLayout>

</android.support.v7.widget.CardView>
